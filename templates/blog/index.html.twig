{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
    
   {% for article in articles %}
    
    <section class="articles">
            <article>
                <h2>{{ article.title }}</h2>
                <div class="metadata">Ecrit le {{ article.createdAt | date ('d/m/Y')}} à 
                    {{ article.createdAt | date ('H:i') }} dans la catégorie {{ article.category.title }}
                </div>
                <div class="content">
                    <img src="{{ article.image }}" alt="">
                    <br>
                    {{ article.content | raw }}
                    <br><a href=" {{ path('blog_show', {'id' : article.id}) }} " class="btn btn-danger">Lire la suite</a>
                </div>
            </article>       
    </section>
    
    {% endfor %} 


{% endblock %}