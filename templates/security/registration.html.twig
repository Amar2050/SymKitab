{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscrivez vous !</h1>
    {{ form_start(form) }}
    {{ form_row(form.username, {'label':'Nom d\'utilisateur','attr':{'placeholder':"Entrez votre nom"}}) }}
    {{ form_row(form.email, {'attr':{'placeholder':"Entrez votre email"}}) }}
    {{ form_row(form.password, {'label':'Mot de passe','attr':{'placeholder':"Entrez votre mot de passe"}}) }}
    {{ form_row(form.confirm_password, {'label':'Confirmation du mot de passe','attr':{'placeholder':"Retaper votre mot de passe"}}) }}
    <button type="submit" class="btn btn-info">Inscription</button>
    {{ form_end(form) }}
    
{% endblock %}